# LLM 配置（支持自定义）
LLM_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=your-api-key-here
LLM_MODEL_NAME=gpt-4

# ASIDE LLM（用于轻量任务：抽链接/分类/清洗等；不填则复用主 LLM）
ASIDE_LLM_BASE_URL=
ASIDE_LLM_API_KEY=
ASIDE_LLM_MODEL_NAME=

# Craft API
# 注意：CRAFT_API_BASE_URL 通常包含访问令牌，请不要把真实值提交到公开仓库
CRAFT_API_BASE_URL=
CRAFT_COLLECTION_ID=your-collection-id
CRAFT_READING_TEMPLATE_ID=your-template-block-id
# Craft 文档归档文件夹（可选）：精读笔记创建到该文件夹（示例：论文文件夹 ID）
CRAFT_PAPERS_FOLDER_ID=your-folder-id

# 飞书机器人
FEISHU_APP_ID=your-app-id
FEISHU_APP_SECRET=your-app-secret
FEISHU_VERIFICATION_TOKEN=your-verification-token
FEISHU_ENCRYPT_KEY=your-encrypt-key

# 服务配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# 持久化
SQLITE_DB_PATH=./data/workflow.db

# 日志级别
LOG_LEVEL=INFO
